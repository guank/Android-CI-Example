<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stacktoheap.android_ci_example" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.stacktoheap.android_ci_example.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.stacktoheap.android_ci_example.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="com.stacktoheap.android_ci_example.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.stacktoheap.android_ci_example.MainActivity" />
        </activity>
    </application>

</manifest>
